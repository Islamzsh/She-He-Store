				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#testimonialCarousel" role="button" data-slide="next" style="color:#3246d2; text-decoration:none!important">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
	</div>
</section>



<script>
	$(document).ready(function () {
		$("#addToWishlistButton").on("click", function (e) {
			e.preventDefault();

			var productId = $(this).closest('.block2').find('.block2-btn').data('product-id');

			// Store the product ID in a cookie or local storage
			localStorage.setItem('wishlistProductId', productId);

			// Redirect the user to the login page
			window.location.href = '/LoginAndRegister/Login';
		});

		// Add this part to your login success handling
		// Check for the presence of the product ID in the cookie or local storage
		var wishlistProductId = localStorage.getItem('wishlistProductId');

		if (wishlistProductId) {
			// Clear the stored product ID
			localStorage.removeItem('wishlistProductId');

			// Redirect the user back to the home page with the product ID
			window.location.href = '/Products/GetProduct/' + wishlistProductId;
		}
	});

		

		// Attach a click event handler to the "OK" button in the wishlist success message
		$("#okWishlistButton").on("click", function () {
			// Hide the success message card
			$("#addToWishlistSuccessMessage").hide();
		});
	});</script>