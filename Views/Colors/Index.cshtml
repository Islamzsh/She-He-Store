@model IEnumerable<She_He_Store.Models.Color>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<head>

    <style>
        .styled-table {
            border-collapse: collapse;
            width: 100%;
            font-size: 16px;
            text-align: left;
        }

            .styled-table th,
            .styled-table td {
                padding: 15px;
            }

            .styled-table thead {
                background-color: #15283c;
                color: #ffffff;
            }

            .styled-table tbody tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            .styled-table tbody tr:hover {
                background-color: #e0e0e0;
            }

            .styled-table td img {
                max-width: 100px;
                max-height: 100px;
                border-radius: 20%;
            }

            .styled-table a {
                text-decoration: none;
                color: #15283c;
                margin: 0 5px;
            }

                .styled-table a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<h1>Index</h1>

<p>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
</p>
<table class="styled-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Colorid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Colorname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Colorid)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Colorname)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Colorid">
                        <i class="fa fa-edit"></i>
                </a> |
                  
                <a asp-action="Details" asp-route-id="@item.Colorid">

                        <i class="fa fa-info-circle"></i>
                </a> |
                <a asp-action="Delete" asp-route-id="@item.Colorid">
                        <i class="fa fa-trash aria-hidden=" true""></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
