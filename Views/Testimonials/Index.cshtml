@model IEnumerable<She_He_Store.Models.Testimonial>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">


    <style>
        .product-image {
            max-width: 150px;
            height: 150px;
        }

        table thead tr th {
            font-weight: 700;
            color: black;
        }

        tr td {
            color: black;
        }
    </style>
</head>

<h1 style="margin-bottom:20px;">Testimonails </h1>
@*<p>
    <a asp-action="Create" class="btn" style="background-color:black; color :white">Create New</a>
</p>*@

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customername)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Testimonialtext)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Testimonialdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customername)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Testimonialtext)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Testimonialdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Userid)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.Testimonialid"> <i class="fa fa-info-circle" style="color:black !important; "></i></a>
 
                    <a asp-action="Approved" asp-route-id="@item.Testimonialid">
                        <i class="fas fa-check" style="color: #2E8B57;"> </i>
                    </a>

                    <a asp-action="Reject" asp-route-id="@item.Testimonialid">
                        <i class="fa  fa-times-circle" style="color: #9A2A2A;"></i>
                    </a>

                </td>
        </tr>
}
    </tbody>
</table>
